{
  "name": "pern-boilerplate",
  "version": "1.0.0",
  "main": "server.js",
  "description": "Boilerplate for pern stack applications with graphql and apollo",
  "engines": {
    "node": "14.15.x",
    "yarn": "1.22.x"
  },
  "scripts": {
    "start": "node build/server.js",
    "build": "tsc",
    "watch": "tsc -w",
    "mon": "nodemon build/server.js",
    "dev": "concurrently \"tsc -w\" \"nodemon build/server.js\"",
    "heroku-postbuild": "yarn global add typescript@4.0.2 && yarn && yarn run build"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.17.0",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql": "^15.3.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.0.0",
    "typeorm": "^0.2.26"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express-session": "^1.17.3",
    "@types/node": "^14.10.1",
    "class-validator": "^0.12.2",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.4",
    "typescript": "^4.0.2"
  }
}
